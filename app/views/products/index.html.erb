<%if params[:success]%>
  <div class="alert alert-success mb-5" role = "alert">
    Thanks for your order
  </div>
<%end%>

<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Price</th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name%></td>
        <td><%= number_to_currency(product.price)%></td>

        <td><%= button_to "Buy now!", checkout_create_path,method: :post, data: {turbo: false}, params: {id: product.id} %>
          

        </td>
        <td><%= link_to 'Show',product_path(product.id)%></td>
        <td><%= link_to 'Edit',edit_product_path(product)%></td>
        <td><%= button_to 'Destroy',product, method: :delete, data: {confirm: 'Are you sure?' }%></td>
      </tr>
    <%end%>
  </tbody>
</table>



<%= link_to "New product", new_product_path %>
